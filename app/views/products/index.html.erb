<h1>Cart</h1>
<%=form_tag "/add" do%>
    <%=label_tag :product%>
    <%=text_field_tag :product%>
    <%=submit_tag 'add to cart'%>
<%end%>

<%if !cart.empty?%>
    <h3>Your cart contains:</h3>
    <ol>
    <%cart.each do |c|%>
        <li>
            <%=c%>
        </li>
    <%end%>
    </ol>
<%else%>
    <h3>Your cart is empty.</h1>
<%end%>